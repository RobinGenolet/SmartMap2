<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_friends_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView
        android:contentDescription="@string/user_information_picture_description"
        android:scaleType="fitXY"
        android:id="@+id/activity_friends_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5sp"
        />
    
    <TextView
        android:id="@+id/activity_friends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_friends_picture"
        android:layout_toRightOf="@+id/activity_friends_picture"
        android:textStyle="bold"
        android:textSize="18sp"
        />
 
     <TextView
        android:id="@+id/activity_friends_lastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_friends_name"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/activity_friends_picture"
        android:gravity="right"
        android:textSize="15sp"
        android:textColor="@color/main_grey" />

</RelativeLayout>
