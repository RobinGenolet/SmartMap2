<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_friends_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_show_filters_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/activity_show_filters_follow_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textOff="@string/activity_show_filters_unfollow_switch"
        android:textOn="@string/activity_show_filters_follow_switch" />

</RelativeLayout>